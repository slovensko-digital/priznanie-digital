{
  "name": "priznanie-digital",
  "version": "0.1.0",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "clean": "rm -rf ./.next && rm ./__tests__/**/*.output.*",
    "dev": "next dev",
    "dev:cy": "start-server-and-test dev http://localhost:3000/ cy:open",
    "build": "next build",
    "start": "node node_modules/next/dist/bin/next start -p $PORT",
    "test:watch": "yarn test -- --watch",
    "test": "jest",
    "ci": "yarn lint && yarn test -- --ci && yarn build && yarn cy:ci",
    "prettier": "prettier --write  './{src,__tests__,cypress}/**/*.{ts,tsx,js,css}'",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:dashboard": "cypress run --record --parallel",
    "cy:ci": "PORT=3000 start-server-and-test start http://localhost:3000/ cy:run:dashboard",
    "lint": "eslint . --format pretty --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "check:ts": "tsc --noEmit",
    "git-comit-hash": "echo {\\\"gitCommit\\\":\\\"$(git rev-parse --short HEAD)\\\"} > ./git-commit.json && git add ./git-commit.json"
  },
  "dependencies": {
    "base64-js": "^1.5.1",
    "classnames": "2.2.6",
    "decimal.js": "10.2.1",
    "formik": "2.2.6",
    "fuse.js": "6.4.6",
    "hummus": "1.0.110",
    "iban": "0.0.14",
    "js-file-download": "0.4.12",
    "lodash.clonedeep": "4.5.0",
    "memory-streams": "0.1.3",
    "next": "^10.0.9",
    "nookies": "2.5.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rodnecislo": "1.6.0",
    "xml-js": "1.6.11",
    "yup": "0.32.9"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "4.1.5",
    "@types/classnames": "2.2.11",
    "@types/gtag.js": "0.0.4",
    "@types/iban": "0.0.32",
    "@types/jest": "26.0.21",
    "@types/lodash.clonedeep": "4.5.6",
    "@types/node": "14.14.35",
    "@types/react": "^17.0.3",
    "@types/xml2js": "0.4.8",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "^26.6.3",
    "cypress": "^6.8.0",
    "cypress-file-upload": "5.0.2",
    "eslint": "6.8.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-formatter-pretty": "4.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-only-warn": "1.0.2",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "2.5.1",
    "eslint-plugin-sonarjs": "0.6.0",
    "eslint-plugin-unicorn": "19.0.1",
    "husky": "5.1.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "^26.6.3",
    "jest-raw-loader": "^1.0.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "start-server-and-test": "1.12.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "8.0.18",
    "typescript": "4.2.3",
    "webpack": "4.46.0",
    "xml2js": "0.4.23"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn check:ts && yarn git-comit-hash"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "yarn lint"
    ]
  }
}
